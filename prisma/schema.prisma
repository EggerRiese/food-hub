generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Dish {
  id       String @id @default(cuid())
  name     String
  url      String @db.Text
  authorId String
  ingridients Ingridient[]

  @@index([authorId])
}

model Ingridient {
  id   String @id @default(cuid())
  dish Dish @relation(fields: [dishId], references: [id])
  name String 
  dishId String

  @@index([dishId])
}
